# finds out, if available)

bar {
        #status_command python3 ~/.i3/mypystatus.py
	status_command sh  ~/.config/conky/conky-i3bar
        position bottom
        strip_workspace_numbers yes
		font pango:DejaVu Mono Bold 10
        height 20
        colors {
                statusline         $white
                background         $background
                separator          $darkgreen

#                                  BORDER      BACKGROUND  TEXT
                focused_workspace  $darkred    $background $darkgreen
                inactive_workspace $background $background $white
                urgent_workspace   $red        $red        $background
        }
}
